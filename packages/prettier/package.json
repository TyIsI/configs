{
    "author": "Ty Eggen",
    "dependencies": {
        "prettier-plugin-sh": "^0.14.0",
        "prettier-plugin-tailwindcss": "^0.6.8"
    },
    "description": "",
    "devDependencies": {
        "eslint": "^9.12.0",
        "prettier": "^3.3.3",
        "tsup": "^8.3.0",
        "typescript": "^5.6.3",
        "wireit": "^0.14.9"
    },
    "exports": {
        ".": {
            "import": "./dist/config.mjs",
            "require": "./dist/config.cjs"
        }
    },
    "keywords": [],
    "license": "ISC",
    "name": "@tyisi/config-prettier",
    "peerDependencies": {
        "prettier": "^3.3.3"
    },
    "repository": "https://github.com/TyIsI/configs.git",
    "scripts": {
        "build": "wireit",
        "build:cjs": "wireit",
        "build:esm": "wireit",
        "commit": "npx git-cz@latest --scope=prettier",
        "lint": "wireit",
        "type-check": "wireit"
    },
    "version": "0.0.0",
    "wireit": {
        "build": {
            "dependencies": [
                "build:cjs",
                "build:esm",
                "type-check"
            ]
        },
        "build:cjs": {
            "clean": true,
            "command": "tsup --cjsInterop --format cjs",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/config.ts"
            ],
            "output": [
                "dist/config.cjs"
            ]
        },
        "build:esm": {
            "clean": true,
            "command": "tsup --format esm",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/config.ts"
            ],
            "output": [
                "dist/config.mjs"
            ]
        },
        "lint": {
            "dependencies": [
                "lint:code",
                "lint:format"
            ]
        },
        "lint:code": {
            "command": "eslint --fix src/"
        },
        "lint:format": {
            "command": "prettier -w .",
            "dependencies": [
                "lint:code"
            ]
        },
        "type-check": {
            "command": "tsc --noEmit"
        }
    }
}
