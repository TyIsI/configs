{
    "author": "Ty Eggen",
    "description": "a standard extensible prettier config",
    "devDependencies": {
        "eslint": "9.39.2",
        "git-cz": "4.9.0",
        "prettier": "3.8.1",
        "tsup": "8.5.1",
        "typescript": "5.9.3",
        "wireit": "0.14.12"
    },
    "exports": {
        ".": {
            "types": {
                "require": "./dist/full.d.cts",
                "import": "./dist/full.d.mts"
            },
            "import": "./dist/full.mjs",
            "require": "./dist/full.cjs"
        },
        "./base": {
            "types": {
                "require": "./dist/full.d.cts",
                "import": "./dist/full.d.mts"
            },
            "import": "./dist/base.mjs",
            "require": "./dist/base.cjs"
        },
        "./full": {
            "types": {
                "require": "./dist/full.d.cts",
                "import": "./dist/full.d.mts"
            },
            "import": "./dist/full.mjs",
            "require": "./dist/full.cjs"
        },
        "./sh": {
            "types": {
                "require": "./dist/full.d.cts",
                "import": "./dist/full.d.mts"
            },
            "import": "./dist/sh.mjs",
            "require": "./dist/sh.cjs"
        },
        "./tailwindcss": {
            "types": {
                "require": "./dist/full.d.cts",
                "import": "./dist/full.d.mts"
            },
            "import": "./dist/tailwindcss.mjs",
            "require": "./dist/tailwindcss.cjs"
        }
    },
    "files": [
        "./dist",
        "package.json",
        "README.md"
    ],
    "keywords": [],
    "license": "ISC",
    "name": "@tyisi/config-prettier",
    "peerDependencies": {
        "prettier": "3.8.1",
        "prettier-plugin-sh": "0.18.0",
        "prettier-plugin-tailwindcss": "0.6.14"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": "https://github.com/TyIsI/configs.git",
    "scripts": {
        "build": "wireit",
        "commit": "git-cz --scope=prettier",
        "lint": "wireit",
        "type-check": "wireit"
    },
    "type": "module",
    "version": "3.0.0",
    "wireit": {
        "build": {
            "dependencies": [
                "type-check",
                "build_dist",
                "build_fix"
            ],
            "files": [
                "./src/*.ts"
            ]
        },
        "build_dist": {
            "clean": true,
            "dependencies": [
                "type-check"
            ],
            "command": "tsup",
            "files": [
                "./src/*.ts"
            ],
            "output": [
                "dist/*"
            ]
        },
        "build_fix": {
            "dependencies": [
                "build_dist"
            ],
            "command": "tools/fix-dist-extensions.sh",
            "files": [
                "dist/"
            ]
        },
        "lint": {
            "dependencies": [
                "lint:code",
                "lint:format"
            ]
        },
        "lint:code": {
            "command": "eslint --fix src/"
        },
        "lint:format": {
            "command": "prettier -w .",
            "dependencies": [
                "lint:code"
            ]
        },
        "type-check": {
            "command": "tsc --noEmit"
        }
    }
}
