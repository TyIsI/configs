{
    "author": "Ty Eggen",
    "description": "a git-cz config generator",
    "devDependencies": {
        "eslint": "9.39.2",
        "git-cz": "4.9.0",
        "prettier": "3.8.1",
        "tsup": "8.5.1",
        "typescript": "5.9.3",
        "wireit": "0.14.12"
    },
    "exports": {
        ".": {
            "import": "./dist/config.mjs",
            "require": "./dist/config.cjs",
            "types": "./dist/config.d.ts"
        }
    },
    "files": [
        "./dist"
    ],
    "keywords": [],
    "license": "ISC",
    "name": "@tyisi/config-changelog",
    "peerDependencies": {
        "git-cz": "4.9.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": "https://github.com/TyIsI/configs.git",
    "scripts": {
        "build": "wireit",
        "build:cjs": "wireit",
        "build:dts": "wireit",
        "build:esm": "wireit",
        "commit": "git-cz --scope=changelog",
        "lint": "wireit",
        "type-check": "wireit"
    },
    "type": "module",
    "version": "2.0.0",
    "wireit": {
        "build": {
            "dependencies": [
                "build:cjs",
                "build:dts",
                "build:esm",
                "type-check"
            ]
        },
        "build:cjs": {
            "clean": true,
            "command": "tsup --cjsInterop --format cjs",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/config.ts"
            ],
            "output": [
                "dist/*.cjs"
            ]
        },
        "build:dts": {
            "clean": true,
            "command": "tsup --cjsInterop --dts-only --format esm",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/*.ts"
            ],
            "output": [
                "dist/config.d.ts"
            ]
        },
        "build:esm": {
            "clean": true,
            "command": "tsup --format esm",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/config.ts"
            ],
            "output": [
                "dist/config.mjs"
            ]
        },
        "lint": {
            "dependencies": [
                "lint:code",
                "lint:format"
            ]
        },
        "lint:code": {
            "command": "eslint --fix src/"
        },
        "lint:format": {
            "command": "prettier -w .",
            "dependencies": [
                "lint:code"
            ]
        },
        "type-check": {
            "command": "tsc --noEmit"
        }
    }
}
