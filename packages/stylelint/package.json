{
    "author": "Ty Eggen",
    "dependencies": {
        "stylelint-config-clean-order": "8.0.0",
        "stylelint-config-css-modules": "4.6.0",
        "stylelint-config-property-sort-order-smacss": "11.1.0",
        "stylelint-config-standard-scss": "17.0.0",
        "stylelint-order": "7.0.1",
        "stylelint-prettier": "5.0.3"
    },
    "description": "my standard stylelint config",
    "devDependencies": {
        "@tyisi/config-eslint": "workspace:*",
        "@tyisi/config-prettier": "workspace:*",
        "cosmiconfig": "9.0.0",
        "eslint": "9.39.2",
        "git-cz": "4.9.0",
        "postcss": "8.5.6",
        "prettier": "3.8.1",
        "stylelint": "17.0.0",
        "stylelint-config-standard": "40.0.0",
        "tsup": "8.5.1",
        "typescript": "5.9.3",
        "wireit": "0.14.12"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "./dist"
    ],
    "keywords": [],
    "license": "ISC",
    "main": "./dist/index.cjs",
    "name": "@tyisi/config-stylelint",
    "peerDependencies": {
        "stylelint": "17.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": "https://github.com/TyIsI/configs.git",
    "scripts": {
        "build": "wireit",
        "build:cjs": "wireit",
        "build:esm": "wireit",
        "commit": "git-cz --scope=stylelint",
        "lint": "wireit",
        "type-check": "wireit"
    },
    "type": "module",
    "version": "3.0.0",
    "wireit": {
        "build": {
            "clean": true,
            "dependencies": [
                "build:cjs",
                "build:esm",
                "build:dts",
                "type-check"
            ],
            "files": [
                "src/index.ts"
            ]
        },
        "build:cjs": {
            "clean": true,
            "command": "tsup --cjsInterop --format cjs",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/index.ts"
            ],
            "output": [
                "dist/index.cjs"
            ]
        },
        "build:dts": {
            "clean": true,
            "command": "tsup --format esm --dts-only",
            "dependencies": [
                "type-check",
                "build:cjs",
                "build:esm"
            ],
            "files": [
                "src/index.ts"
            ],
            "output": [
                "dist/index.d.ts"
            ]
        },
        "build:esm": {
            "clean": true,
            "command": "tsup --format esm",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/index.ts"
            ],
            "output": [
                "dist/index.mjs"
            ]
        },
        "lint": {
            "dependencies": [
                "lint:code",
                "lint:format"
            ]
        },
        "lint:code": {
            "command": "eslint --fix src/"
        },
        "lint:format": {
            "command": "prettier -w .",
            "dependencies": [
                "lint:code"
            ]
        },
        "type-check": {
            "command": "tsc --noEmit",
            "files": [
                "src/index.ts"
            ]
        }
    }
}
