{
    "author": "Ty Eggen",
    "dependencies": {
        "stylelint-config-clean-order": "^7.0.0",
        "stylelint-config-css-modules": "^4.5.1",
        "stylelint-config-property-sort-order-smacss": "^10.0.0",
        "stylelint-config-standard-scss": "^15.0.1",
        "stylelint-order": "^7.0.0",
        "stylelint-prettier": "^5.0.3"
    },
    "description": "my standard stylelint config",
    "devDependencies": {
        "@tyisi/config-eslint": "workspace:*",
        "@tyisi/config-prettier": "workspace:*",
        "cosmiconfig": "^9.0.0",
        "eslint": "^9.32.0",
        "globby": "^14.1.0",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "stylelint": "^16.23.0",
        "stylelint-config-standard": "^39.0.0",
        "tsup": "^8.5.0",
        "typescript": "^5.6.3",
        "wireit": "^0.14.12"
    },
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "./dist"
    ],
    "keywords": [],
    "license": "ISC",
    "main": "./dist/index.cjs",
    "name": "@tyisi/config-stylelint",
    "peerDependencies": {
        "stylelint": "^14.16.1"
    },
    "prettier": "@tyisi/config-prettier",
    "repository": "https://github.com/TyIsI/configs.git",
    "scripts": {
        "build": "wireit",
        "build:cjs": "wireit",
        "build:esm": "wireit",
        "commit": "npx git-cz@latest --scope=stylelint",
        "lint": "wireit",
        "type-check": "wireit"
    },
    "type": "commonjs",
    "version": "1.1.0",
    "wireit": {
        "build": {
            "clean": true,
            "dependencies": [
                "build:cjs",
                "build:esm",
                "type-check"
            ],
            "files": [
                "src/index.ts"
            ]
        },
        "build:cjs": {
            "clean": true,
            "command": "tsup --cjsInterop --format cjs",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/index.ts"
            ],
            "output": [
                "dist/index.cjs"
            ]
        },
        "build:esm": {
            "clean": true,
            "command": "tsup --format esm",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/index.ts"
            ],
            "output": [
                "dist/index.mjs"
            ]
        },
        "lint": {
            "dependencies": [
                "lint:code",
                "lint:format"
            ]
        },
        "lint:code": {
            "command": "eslint --fix src/"
        },
        "lint:format": {
            "command": "prettier -w .",
            "dependencies": [
                "lint:code"
            ]
        },
        "type-check": {
            "command": "tsc --noEmit",
            "files": [
                "src/index.ts"
            ]
        }
    }
}
