{
    "author": "Ty Eggen",
    "dependencies": {
        "@eslint/js": "^9.12.0",
        "eslint-config-love": "^87.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.0",
        "eslint-plugin-react": "^7.37.1",
        "globals": "^15.11.0"
    },
    "description": "various eslint configs",
    "devDependencies": {
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/eslint-plugin-jsx-a11y": "^6.9.0",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.0.0",
        "@typescript-eslint/utils": "^8.11.0",
        "eslint": "^9.12.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "prettier": "^3.3.3",
        "tsup": "^8.3.0",
        "typescript": "^5.6.3",
        "wireit": "^0.14.9"
    },
    "engines": {
        "node": ">=20"
    },
    "type": "module",
    "main": "./dist/index.mjs",
    "types": "./dist/index.d.mts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.mts"
        },
        "./combined": {
            "import": "./dist/combined.mjs",
            "types": "./dist/combined.d.mts"
        },
        "./js": {
            "import": "./dist/js.mjs",
            "types": "./dist/js.d.mts"
        },
        "./jsx": {
            "import": "./dist/jsx.mjs",
            "types": "./dist/jsx.d.mts"
        },
        "./ts": {
            "import": "./dist/ts.mjs",
            "types": "./dist/ts.d.mts"
        },
        "./tsx": {
            "import": "./dist/tsx.mjs",
            "types": "./dist/tsx.d.mts"
        }
    },
    "files": [
        "./dist"
    ],
    "keywords": [],
    "license": "ISC",
    "name": "@tyisi/config-eslint",
    "peerDependencies": {
        "eslint": "^9.12.0",
        "prettier": "^3.3.3"
    },
    "repository": "https://github.com/TyIsI/configs.git",
    "scripts": {
        "build": "wireit",
        "build:check": "wireit",
        "build:src": "wireit",
        "commit": "npx git-cz@latest --scope=eslint",
        "lint": "wireit",
        "type-check": "wireit"
    },
    "version": "2.0.0",
    "wireit": {
        "build": {
            "dependencies": [
                "type-check",
                "build:src",
                "build:check"
            ]
        },
        "build:check": {
            "dependencies": [
                "build:src",
                "build:check:eslint:js"
            ]
        },
        "build:check:eslint:js": {
            "dependencies": [
                "build:src"
            ],
            "command": "eslint -c test-configs/eslint.config.cjs.mjs tests/cjs/*.cjs"
        },
        "build:check:eslint:ts": {
            "dependencies": [
                "build:src"
            ],
            "command": "eslint -c test-configs/eslint.config.ts.mjs tests/ts/*.ts"
        },
        "build:src": {
            "dependencies": [
                "type-check",
                "build:src:esm"
            ],
            "command": "tools/fix-dist-extensions.sh"
        },
        "build:src:esm": {
            "clean": true,
            "command": "tsup --format esm --outDir dist/ && tsup  --format esm --outDir dist/ --dts-only",
            "dependencies": [
                "type-check"
            ],
            "files": [
                "src/index.ts"
            ],
            "output": [
                "dist/"
            ]
        },
        "lint": {
            "dependencies": [
                "lint:code",
                "lint:format"
            ]
        },
        "lint:code": {
            "command": "eslint --fix src/ types/"
        },
        "lint:format": {
            "command": "prettier -w .",
            "dependencies": [
                "lint:code"
            ]
        },
        "type-check": {
            "command": "tsc --noEmit"
        }
    }
}
