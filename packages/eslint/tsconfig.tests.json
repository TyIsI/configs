    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
    },
    "include": [
        "tests/**/*.cjs",
        "tests/**/*.js",
        "tests/**/*.jsx",
        "tests/**/*.mjs",
        "tests/**/*.cts",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "tests/**/*.mts"
    ],
    "exclude": ["dist/"]
}
