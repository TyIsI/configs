{
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "typeRoots": ["node_modules/@types", "types/@types"]
    },
    "include": [
        "tests/**/*.cjs",
        "tests/**/*.js",
        "tests/**/*.jsx",
        "tests/**/*.mjs",
        "tests/**/*.cts",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "tests/**/*.mts"
    ]
}
